{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "name": "project name",
  "definitions": {
    "component": {
      "type": "string",
      "enum": [
        "Salesforce", 
        "Save Message", 
        "Sugar"
      ]
    },
    "resource": {
      "type": "object",
      "properties": {
        "name": {
          "type": "string"
        },
        "description": {
          "type": "string"
        },
        "type": {
          "$ref": "#/definitions/component"
        },
        "value": {
          "type": "string"
        }
      },
      "required": [
        "name",
        "type"
      ],
      "additionalProperties": false
    },
    "resources": {
      "type": "array",
      "items": {
        "$ref": "#/definitions/resource"
      }
    },
    "step": {
      "type": "object",
      "properties": {
        "name": {
          "type":"string"
        },
        "type" : {
          "$ref": "#/definitions/component"
        },
        "resource": {
          "$ref": "#/definitions/resource"
        }
      }
    }
  },
  "type": "object",
  "description": "project",
  "properties": {
    "name": {
      "type": "string",
      "description": "project description is here",
      "title": "project title is here",
      "maxLength": 50,
      "minLength": 1,
      "pattern": "^[A-Za-z][A-Za-z0-9_]*$"
    },
    "description": {
      "type": "string"
    },
    "resources": {
      "$ref": "#/definitions/resources"
    },
    "services": {
      "type": "array",
      "items": {
        "$ref": "#/definitions/resource"
      }
    },
    "flow": {
      "type": "object",
      "properties": {
        "name": {
          "type": "string"
        },
        "description": {
          "type": "string"
        },
        "steps" : {
          "type": "array",
          "items": {
            "$ref": "#/definitions/step"
          }
        }
      },
      "required": ["name"],
      "additionalProperties": false
    }
  },
  "required": ["name", "resources"],
  "additionalProperties": false
}