    "version": "0.2.0",
    "configurations": 
    [
        {
            "name": "Debug index.ts directly",
            "type":"node",
            "request":"launch",
            "preLaunchTask": "npm: build",
            "program":"${workspaceFolder}/src/index.ts",
            "stopOnEntry":false,
            "args":[],
            "cwd":"${workspaceFolder}/.",
            "runtimeExecutable":null,
            "runtimeArgs":[
                "--nolazy"
            ],
            "env":{
                "NODE_ENV":"development"
            },
            "console":"integratedTerminal",
            "sourceMaps":true,
            "outFiles":[
                "${workspaceFolder}/lib/**/*.js"
            ]
            
        }        
    ]
}